{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es7", "es6", "dom.iterable", "scripthost"],
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "lib"]
}
